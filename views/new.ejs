<% layout("/layouts/boilerplate.ejs") %>

 

<div class="row">
  <div class="col-5 offset-2">
  <form method="Post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-title">Title:</label>
      <input name="listing[title]" type="text" placeholder="Catchy Title.. " class="form-control"
      required>
      <div class="invalid-feedback"> please enter title</div>
    </div>
     <div class="mb-3">
      <label for="description" class="form-description">Description:</label>
      <input name="listing[description]" type="text" placeholder="Enter description" class="form-control"
      required>
      <div class="invalid-feedback"> please enter Description</div>
     </div>
    
     <div class="mb-3" >
      <label for="image" class="form-image">Upload Image</label>
      <input name="listing[image]" 
       type="file"
      class="form-control"
      accept="image/*"
      required>
     </div>
   
   <!-- <br> -->
    <div class="row">
   <div class="mb-3 col-md-4">
    <label for="price" class="form-price">Price:</label>
   <input name="listing[price]" type="number" placeholder="Enter price" class="form-control" required>
   <div class="invalid-feedback"> please enter valid price</div>
  </div>
</div>
   <!-- <br> -->
   <div class="row">
   <div class="mb-3 col-md-4">
    <label for="country" class="form-price">Country:</label>
   <input name="listing[country]" type="text" placeholder="India" class="form-control"
   required>
  </div>
<!-- <br> --> 
   <div class="mb-3  col-md-4" >
   <label for="location" class="form-price">Location:</label>
   <input name="listing[location]" type="text" placeholder="kashi/UP" class="form-control" required>
  </div>
</div>
   <!-- <br> -->
  <button class="btn btn-dark add-btn" >Add</button>
  <br>
  </form>
</div>
</div>
